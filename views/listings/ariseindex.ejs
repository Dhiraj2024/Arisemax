<script>
  // Simple client-side "mark as done" effect
  document.querySelectorAll('.btn-done').forEach(button => {
    button.addEventListener('click', () => {
      const title = button.previousElementSibling;
      title.classList.toggle('completed');
      button.textContent = title.classList.contains('completed') ? 'Undo' : 'Done';
    });
  });
</script>

