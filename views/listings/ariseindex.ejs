  .btn-done {
    color: #f8f9fa;
  padding: 12px 28px;
 border-radius: 20px 0px;
  transition: 0.2s;
  background-color: #101d2acf;
}

/* fire border effect */
.btn-done::before {
  content: "";
  position: absolute;
  top: -6px;
  left: -6px;
  right: -6px;
  bottom: -6px;
  border-radius: 35px;
  background: conic-gradient(
    from 0deg,
    #0077ff82,
    #0077ff73,
    #ff99008c,
    #ffc1079d,
    #6200ff79,
    #ff6a00,
    #cc00ff93
  );
  filter: blur(8px);
  opacity: 0;
  z-index: -1;
  transition: 0.25s ease-in-out;
}

/* show fire on hover */
.btn-done:hover::before {
  opacity: 1;
  transform: scale(1.05);
}

</style>

