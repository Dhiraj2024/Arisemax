<%- layout("layout/boilerplate") %>

<div class="content mx-auto my-4">
  <div class="idol-content">
    <h2 class="text-center mb-4">Explore Career Opportunities</h2>

    <div class="idol-cards d-flex flex-wrap justify-content-center gap-4">
      <% for(let expo of allExpo) { %>
      <div class="card idol-card shadow-sm">
        <img src="<%= expo.image.url %>" class="card-img-top" alt="image" />
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title text-center mb-2"><%= expo.title %></h5>
            <p class="card-text text-muted mb-1">
              <strong>Eligibility:</strong> <%= expo.eligibility %>
            </p>
            <p class="card-text mb-1">
              <strong>Details:</strong>
              <a href="<%= expo.details %>" target="_blank" class="text-decoration-none text-primary">
                Watch Video
              </a>
            </p>
          </div>

          <div class="d-flex justify-content-end align-items-center gap-2 mt-2">
            <a href="/expo/<%= expo._id %>/edit" class="text-secondary" title="Edit Entry"> ✏️ </a>
            <form method="POST" action="/expo/<%= expo._id %>?_method=DELETE" style="display:inline;">
              <button
                class="btn p-0 text-danger border-0 bg-transparent"
                title="Delete Entry"
                onclick="return confirm('Are you sure you want to delete this?')"
              >
                🗑️
              </button>
            </form>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Add new explore card -->
      <div class="card idol-card add-card text-center d-flex align-items-center justify-content-center shadow-sm">
        <a href="/expo/new" class="text-decoration-none text-dark">
          <span class="d-block fs-3">➕</span>
          <p class="m-0 fw-semibold">Add New Career Field</p>
        </a>
      </div>
    </div>
  </div>
</div>
