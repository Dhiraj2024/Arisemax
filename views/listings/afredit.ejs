<%- layout("layout/boilerplate")  %>

<div class="content">
 <main class="edit-goal-content">
    <div class="card form-card bg-white mx-auto">
      <h3>Edit Your Affermation</h3>
      <form method="POST" action="/afr/<%= afr._id %>?_method=PUT" novalidate class="needs-validation">
        
        <div class="mb-3">
          <label for="editTitle" class="form-label">Title</label>
          <input id="editTitle" name="afr[title]" value="<%= afr.title %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a title.</div>
        </div>


        <button class="btn btn-save mt-3">Save Changes</button>
      </form>
    </div>
  </main>
  </div>