<%- layout("layout/boilerplate")  %>
<div class="content">
  <div class="create-goal-content">
    <main class="container-fluid px-0">
      <div class="card form-card bg-white mx-auto">
        <h3>Create a New Goal</h3>
        <form method="POST" action="/afr" novalidate class="needs-validation">
          
          <div class="mb-3">
            <label for="mortTitle" class="form-label">Title</label>
            <input
              id="afrTitle"
              name="afr[title]"
              placeholder="Enter title"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter a title.</div>
          </div>


          <button class="btn btn-add-goal mt-3">Add Affermation</button>
        </form>
      </div>
    </main>
  </div>
  </div>