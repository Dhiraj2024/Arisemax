<%- layout("layout/boilerplate") %>

<div class="content">
  <div class="mortgage-content">
    <h2>My Affirmation Listings</h2>

    <% for (let afr of allAfr) { %>

      <div class="mort-list-card card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">

          <div>
            <% if (afr.owner && afr.owner.username) { %>
              <i><%= afr.owner.username %></i>
            <% } %>

            <h5 class="card-title mb-1"><%= afr.title %></h5>
          </div>

          <% 
            const isOwner = currentUser 
                            && afr.owner 
                            && afr.owner._id 
                            && currentUser._id.toString() === afr.owner._id.toString(); 
          %>

          <% if (isOwner) { %>
            <div class="d-flex ms-3 flex-shrink-0">
              <a href="/afr/<%= afr._id %>/edit" class="mort-btn-edit text-secondary me-3">âœï¸</a>
             
              <form method="POST" action="/afr/<%= afr._id %>?_method=DELETE">
                <button class="mort-btn-delete text-danger"
                  onclick="return confirm('Are you sure you want to delete this?')"
                  >ğŸ—‘ï¸</button>
              </form>
            </div>
          <% } %>

        </div>
      </div>

    <% } %>
