<%- layout("layout/boilerplate")  %>

<div class="content">
<div class="mortgage-content">
      <h2>My Daily aims</h2>
      <% for(let daily of allDaily) { %>
      <div class="mort-list-card card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center ">
          <div>
            <h5 class="card-title mb-1"><%= daily.title %></h5>
            <p class="card-text text-muted mb-0"><%= daily.description %></p>
          </div>
          <div class="d-flex ms-3 flex-shrink-0">
            <a href="/daily/<%= daily._id %>/edit" class="mort-btn-edit text-secondary me-3" title="Edit Entry">
              ✏️
            </a>
            <form method="POST" action="/daily/<%= daily._id %>?_method=DELETE" style="display:inline;">
              <button class="mort-btn-delete text-danger" title="Delete Entry" onclick="return confirm('Are you sure you want to delete this?')">
                🗑️
              </button>
            </form>
          </div>
        </div>
      </div>
      <% } %>
      <div class="mort-add-card card mt-4">
        <div class="card-body p-4 text-center">
          <a href="/daily/new" class="d-inline-flex align-items-center">
            <span class="me-2" style="font-size: 1.25rem;">➕</span> Add New Daily Aims
          </a>
        </div>
      </div>
  </div>
</div>