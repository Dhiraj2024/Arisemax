<%- layout("layout/boilerplate")  %>
<div class="content">
  <div class="create-goal-content">
    <main class="container-fluid px-0">
      <div class="card form-card bg-white mx-auto">
        <h3>Create a</h3>
        <form method="POST" action="/daily" novalidate class="needs-validation">
          
          <div class="mb-3">
            <label for="dailyTitle" class="form-label">Title</label>
            <input
              id="dailyTitle"
              name="daily[title]"
              placeholder="Enter title"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <div class="mb-3">
            <label for="dailyDescription" class="form-label">Description</label>
            <textarea
              id="dailyDescription"
              name="daily[description]"
              placeholder="Enter description"
              class="form-control"
              rows="5"
              required
            ></textarea>

            <div class="invalid-feedback">Please enter a description.</div>
          </div>

          <button class="btn btn-add-goal mt-3">Add Goal</button>
        </form>
      </div>
    </main>
  </div>
  </div>